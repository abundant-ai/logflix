{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@logflix/shared/*": ["./packages/shared/*"],
      "@logflix/shared/schema": ["./packages/shared/schema.ts"],
      "@logflix/shared/auth": ["./packages/shared/auth.ts"],
      "@logflix/shared/githubSync": ["./packages/shared/githubSync.ts"],
      "@logflix/github-client": ["./packages/github-client/index.ts"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
}
